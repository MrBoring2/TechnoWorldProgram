<Window x:Class="MaterialNotificationLibrary.DemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaterialNotificationLibrary"
        mc:Ignorable="d"
        Title="DemoWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Info" Content="Information" Width="120" HorizontalAlignment="Left"  VerticalAlignment="Top" Cursor="Hand" Margin="5" Click="Info_Click"/>
            <Button x:Name="Warn" Content="Warning" Width="120" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="5" Click="Warn_Click"/>
            <Button x:Name="Error" Content="Error" Width="120" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="5" Click="Error_Click"/>
            <Button x:Name="Question" Content="Question" Width="120" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="5" Click="Question_Click"/>
            <Button x:Name="Success" Content="Success" Width="120" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="5" Click="Success_Click"/>
        </StackPanel>
        

    </Grid>
</Window>
